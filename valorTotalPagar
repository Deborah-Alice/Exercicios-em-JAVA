import java.util.Locale;
import java.util.Scanner;
public class Exe5 {
	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite o código do produto: ");
		int codigo1 = sc.nextInt();
		System.out.println("Digite a quantidade que será comprada: ");
		int quantidade1 = sc.nextInt();
		System.out.println("Digite o valor unitário: ");
		double valorUni = sc.nextDouble();
		double valor1 = valorUni * quantidade1;
		System.out.println("Digite o código do produto: ");
		int codigo2 = sc.nextInt();
		System.out.println("Digite a quantidade que será comprada: ");
		int quantidade2 = sc.nextInt();
		System.out.println("Digite o valor unitário: ");
		double valorUni2 = sc.nextDouble();
		double valor2 = valorUni2 * quantidade2;
		double valorTotal = valor1 + valor2;
		
		System.out.printf("Valor a Pagar: R$ %.2f%n", valorTotal);
		
		sc.close();
	}

}
